<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Budgtr</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <h1>Budgtr</h1>

    <% if( bankAccount < 0){ %>

    <style>
      body {
        background-color: #f74231;
        margin-left: 2.5rem;
        font-family: "Varela Round", sans-serif;
      }
      table td {
        margin-right: 0.1rem;
        padding: 0.8rem;
      }
      #budget-link {
        color: #08f7fe;
      }
    </style>

    <% } else if ( bankAccount > 1000) { %>

    <style>
      body {
        background-color: #a6ffa1;
        margin-left: 2.5rem;
        font-family: "Varela Round", sans-serif;
      }
      table td {
        margin-right: 0.1rem;
        padding: 0.8rem;
      }
      #budget-link {
        color: #65afff;
      }
    </style>

    <% } else { %>
    <style>
      body {
        margin-left: 2.5rem;
        font-family: "Varela Round", sans-serif;
      }
      #budget-link {
        color: #65afff;
      }
      table td {
        margin-right: 0.1rem;
        padding: 0.8rem;
      }
    </style>
    <% } %>

    <table style="margin-bottom: 1rem; border-collapse: collapse; width: 100%">
      <% allBudgets.forEach((budget, idx) =>{ %>
      <tr style="border-bottom: rgb(175, 171, 171, 0.4) 0.8px solid">
        <td><%= budget.date %></td>
        <td>
          <a id="budget-link" href="/budgets/<%= `${idx}` %>"
            ><%= budget.name %></a
          >
        </td>
        <td><%= budget.amount %></td>
      </tr>

      <% }) %>
    </table>

    <button style="padding: 0.5rem; width: 5rem; cursor: pointer">
      <a style="color: black; text-decoration: none" href="/budgets/new">Add</a>
    </button>
  </body>
</html>
